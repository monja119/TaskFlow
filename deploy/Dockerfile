# Stage 1: Dependencies and Build
FROM php:8.4-fpm-alpine AS base

WORKDIR /var/www/html

RUN apk add --no-cache \
    bash \
    curl \
    git \
    libpng-dev \
    libjpeg-turbo-dev \
    freetype-dev \
    libzip-dev \
    oniguruma-dev \
    icu-dev \
    mysql-client \
    nodejs \
    npm \
    supervisor \
    nginx \
    autoconf \
    build-base \
    && docker-php-ext-configure gd --with-freetype --with-jpeg \
    && docker-php-ext-install \
    pdo \
    pdo_mysql \
    mbstring \
    exif \
    pcntl \
    bcmath \
    gd \
    zip \
    intl \
    opcache \
    && pecl install redis \
    && docker-php-ext-enable redis \
    && apk del autoconf build-base


COPY --from=composer:2.7 /usr/bin/composer /usr/bin/composer

COPY <<EOF /usr/local/etc/php/conf.d/custom.ini
memory_limit = 256M
upload_max_filesize = 64M
post_max_size = 64M
max_execution_time = 300
opcache.enable = 1
opcache.memory_consumption = 128
opcache.interned_strings_buffer = 8
opcache.max_accelerated_files = 10000
opcache.revalidate_freq = 2
opcache.fast_shutdown = 1
EOF

# Stage 2: Dependencies Installation
FROM base AS dependencies

COPY composer.json composer.lock ./
COPY package.json ./

RUN composer install \
    --no-dev \
    --no-scripts \
    --no-autoloader \
    --optimize-autoloader \
    --prefer-dist

RUN npm install

# Stage 3: Application Build
FROM dependencies AS builder

COPY . .

RUN composer dump-autoload --optimize --no-dev

RUN npm run build

# Don't cache config during build - it will be done at runtime with correct env vars
# Config cache will be generated by entrypoint.sh using Docker Compose environment variables

# Stage 4: Production Image
FROM base AS production

ARG APP_NAME="TaskFlow"
ARG APP_ENV=production
ARG APP_DEBUG=false
ARG APP_URL
ARG APP_KEY

ENV APP_NAME="${APP_NAME}" \
    APP_ENV="${APP_ENV}" \
    APP_DEBUG="${APP_DEBUG}" \
    APP_URL="${APP_URL}" \
    APP_KEY="${APP_KEY}" \
    LOG_CHANNEL=stderr \
    LOG_LEVEL=info

COPY --from=builder --chown=www-data:www-data /var/www/html /var/www/html

# Copy .env.example for initialization
COPY .env.example /var/www/html/.env.example

COPY deploy/nginx/nginx.conf /etc/nginx/nginx.conf
COPY deploy/nginx/default.conf /etc/nginx/http.d/default.conf

COPY deploy/supervisord.conf /etc/supervisor/conf.d/supervisord.conf

RUN mkdir -p /var/log/supervisor /var/run \
    && chown -R www-data:www-data \
    /var/www/html/storage \
    /var/www/html/bootstrap/cache \
    && chmod -R 775 \
    /var/www/html/storage \
    /var/www/html/bootstrap/cache

# Health check (not yet implemented in the application)
# HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
#     CMD curl -f http://localhost/health || exit 1

# entrypoint
COPY deploy/entrypoint.sh /usr/local/bin/entrypoint.sh
RUN chmod +x /usr/local/bin/entrypoint.sh

EXPOSE 80

ENTRYPOINT ["/usr/local/bin/entrypoint.sh"]
CMD ["/usr/bin/supervisord", "-c", "/etc/supervisor/conf.d/supervisord.conf"]
